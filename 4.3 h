#include <iostream>
#include <fstream>
using namespace std;
int main()
{
	int x = 0;
	int y = 0;
	fstream f;
	f.open("Task3a.txt", ios::out | ios::trunc);
	cout << "Enter x" << endl;
	cin >> x;
	if (x > 3)
	{
		y = 2 * x - 1;
	}
	else
	{
		if (x == 3)
		{
			y = 10;
		}
		else
		{
			y = (2 * x+1)2 - 1;
		}

	}
	cout << "Y = " << y;
	f << "Y = " << y;
}	

/*Дана функция y=f(x). Найти значение функции по x:

y = 2x - 10, если x > 3
y = 10, если x = 3
y = (2 * x+1)2 - 1, если x < 3

*/

